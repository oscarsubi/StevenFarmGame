<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context="upc.android.projecte.stevenfarmgame.Menu">

    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="565dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/menu"
        android:id="@+id/relativeLayout2">

    </RelativeLayout>

    <ImageButton
        android:id="@+id/b_newgame"
        android:layout_width="250dp"
        android:layout_height="170dp"
        android:layout_alignEnd="@+id/relativeLayout2"
        android:layout_alignRight="@+id/relativeLayout2"
        android:layout_alignTop="@+id/relativeLayout2"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="27dp"
        android:background="@android:color/transparent"
        android:rotation="0"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bnewgame" />

    <ImageButton
        android:id="@+id/b_help"
        android:layout_width="170dp"
        android:layout_height="110dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:background="@android:color/transparent"
        android:rotation="-20"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bhelp"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/b_newgame"
        android:layout_alignLeft="@+id/relativeLayout2"
        android:layout_alignStart="@+id/relativeLayout2" />

    <ImageButton
        android:id="@+id/b_exit"
        android:layout_width="170dp"
        android:layout_height="110dp"
        android:background="@android:color/transparent"
        android:rotation="-20"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bexit"
        android:layout_below="@+id/b_help"
        android:layout_alignLeft="@+id/b_help"
        android:layout_alignStart="@+id/b_help" />

    <TextView
        android:id="@+id/StevenFarmGame"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:fontFamily="cursive"
        android:lineSpacingExtra="30sp"
        android:text="StevenFarmGame"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/relativeLayout2"
        android:layout_alignLeft="@+id/relativeLayout2"
        android:layout_alignStart="@+id/relativeLayout2"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="11dp" />

</RelativeLayout>
