<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context="upc.android.projecte.stevenfarmgame.Start">

    <RelativeLayout
        android:id="@+id/rl_start"
        android:layout_width="375dp"
        android:layout_height="565dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/start">

        <ImageButton
            android:id="@+id/b_next"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="14dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/bnext" />

        <EditText
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignEnd="@+id/rg_mode"
            android:layout_alignRight="@+id/rg_mode"
            android:layout_below="@+id/textView"
            android:ems="10"
            android:fontFamily="cursive"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="36sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:text="Name"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="36sp"
            android:textStyle="bold|italic"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/rg_mode"
            android:layout_alignStart="@+id/rg_mode" />

        <RadioGroup
            android:id="@+id/rg_mode"
            android:layout_width="175dp"
            android:layout_height="120dp"
            android:layout_marginRight="72dp"
            android:layout_marginEnd="72dp"
            android:layout_marginBottom="195dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <RadioButton
                android:id="@+id/rb_easy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:text="Easy"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rb_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:text="Normal"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rb_xtreme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:text="XTREME"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_number"
        android:layout_width="350dp"
        android:layout_height="565dp"
        android:background="@drawable/selection"
        android:layout_alignBaseline="@+id/rl_start"
        android:layout_alignBottom="@+id/rl_start"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/text_number"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="@string/NumberPlayers"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/b_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/b_2"
            android:layout_alignBottom="@+id/b_2"
            android:layout_alignLeft="@+id/b_3"
            android:layout_alignStart="@+id/b_3"
            android:background="@color/colorPrimaryDark"
            android:text="1"
            android:textSize="50sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/b_3"
            android:layout_alignStart="@+id/b_3"
            android:layout_below="@+id/b_3"
            android:layout_marginTop="55dp"
            android:background="@color/colorPrimaryDark"
            android:text="5"
            android:textSize="50sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/b_4"
            android:layout_alignBottom="@+id/b_4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="51dp"
            android:layout_marginStart="51dp"
            android:background="@color/colorPrimaryDark"
            android:text="3"
            android:textSize="50sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="52dp"
            android:layout_marginRight="52dp"
            android:layout_marginTop="212dp"
            android:background="@color/colorPrimaryDark"
            android:text="2"
            android:textSize="50sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/b_2"
            android:layout_alignStart="@+id/b_2"
            android:layout_below="@+id/b_2"
            android:layout_marginTop="54dp"
            android:background="@color/colorPrimaryDark"
            android:text="4"
            android:textSize="50sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/b_5"
            android:layout_alignBottom="@+id/b_5"
            android:layout_alignLeft="@+id/b_4"
            android:layout_alignStart="@+id/b_4"
            android:background="@color/colorPrimaryDark"
            android:text="6"
            android:textSize="50sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>
